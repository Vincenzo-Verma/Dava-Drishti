# Forest Fire Prediction System Environment Configuration

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-in-production
DEBUG=True

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/forest_fire_db
MONGODB_URL=mongodb://localhost:27017/forest_fire_ml

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Data Directories
DATA_DIR=data
LOGS_DIR=logs

# API Keys (Add your actual API keys)
CDS_API_KEY=your-cds-api-key
MAPBOX_TOKEN=your-mapbox-token

# Model Configuration
MLFLOW_TRACKING_URI=sqlite:///mlflow.db
MLFLOW_EXPERIMENT_NAME=forest_fire_prediction

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Security
JWT_SECRET_KEY=your-jwt-secret-key

# Logging
LOG_LEVEL=INFO

# External APIs
ERA5_API_URL=https://cds.climate.copernicus.eu/api/v2
VIIRS_API_URL=https://firms.modaps.eosdis.nasa.gov/api/area/csv
MOSDAC_API_URL=https://mosdac.gov.in/api/weather

# Performance Settings
API_RATE_LIMIT=100 per minute
API_TIMEOUT=30
CELERY_TASK_TIME_LIMIT=1800

# File Upload
MAX_CONTENT_LENGTH=104857600
UPLOAD_FOLDER=data/uploads 